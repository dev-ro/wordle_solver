rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Dictionary files - read only for authenticated users
    // Only Cloud Functions can write dictionary files
    match /dictionaries/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write dictionary files
    }
    
    // User uploads - authenticated users can manage their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
